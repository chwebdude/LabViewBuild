{
    "$schema": "https://raw.githubusercontent.com/microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "19b1699a-c437-45a3-a642-03ea21ffbb48",
    "name": "labview-build",
    "friendlyName": "NI LabView build",
    "description": "NI LabVIEW Build project build",
    "helpMarkDown": "",
    "category": "Build",
    "author": "chwebdude",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "LabVIEW: Version and build $(projectFile)",
    "groups":[
        {
            "name": "versioning",
            "displayName": "Versioning",
            "isExpanded": false
        },
        {
            "name": "fileInfo",
            "displayName": "Target File Information",
            "isExpanded": false
        },
        {
            "name": "execution",
            "displayName": "Execution",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "buildType",
            "type":"pickList",
            "defaultValue": "exe",
            "options": {
                "exe": "Application (EXE)",
                "package": "Package"
            },
            "label": "Build Specification Type"
        },

        {
            "name": "projectFile",
            "type": "filePath",
            "label": "LabView Project File",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the *.lvproj file"
        },
        {
            "name": "buildSpecName",
            "type": "string",
            "label": "Build Specification Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": ""
        },
        {
            "name": "targetName",
            "type": "string",
            "label": "Target Name",
            "defaultValue": "My Computer",
            "required": true,
            "helpMarkDown": ""
        },
        {
            "name": "outputDirectory",
            "type": "string",
            "label": "Output Directory",
            "defaultValue": "$(Build.ArtifactStagingDirectory)",
            "required": true,
            "helpMarkDown": ""
        },
        {
            "name": "majorVersion",
            "type": "string",
            "label": "Major Version",
            "defaultValue": "1",
            "required": false,
            "helpMarkDown": "",
            "groupName": "versioning"
        },
        {
            "name": "minorVersion",
            "type": "string",
            "label": "Minor Version",
            "defaultValue": "0",
            "required": false,
            "helpMarkDown": "",
            "groupName": "versioning"
        },
        {
            "name": "patchVersion",
            "type": "string",
            "label": "Patch Version",
            "defaultValue": "0",
            "required": false,
            "helpMarkDown": "",
            "groupName": "versioning"
        },
        {
            "name": "buildVersion",
            "type": "string",
            "label": "Build Version",
            "defaultValue": "0",
            "required": false,
            "helpMarkDown": "",
            "groupName": "versioning"
        },
        {
            "name": "companyName",
            "type": "string",
            "label": "Company Name",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "fileInfo"
        },
        {
            "name": "fileDescription",
            "type": "string",
            "label": "File Description",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "fileInfo"
        },
        {
            "name": "internalName",
            "type": "string",
            "label": "Internal Name",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "fileInfo"
        },
        {
            "name": "copyright",
            "type": "string",
            "label": "Copyright",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "fileInfo"
        },
        {
            "name": "productName",
            "type": "string",
            "label": "Product Name",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "fileInfo"
        },
        {
            "name": "clipath",
            "type": "string",
            "label": "CLI Path",
            "defaultValue": "LabViewCli.exe",
            "required": true,
            "groupName": "execution"
        },
        {
            "name": "portNumber",
            "type": "int",
            "label": "VI Server Port",
            "defaultValue": "3363",
            "required": true,
            "groupName": "execution"
        },
        {
            "name": "retries",
            "type": "int",
            "label": "Retries",
            "defaultValue": "2",
            "required": true,
            "groupName": "execution"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}